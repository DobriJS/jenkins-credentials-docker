pipeline {
  agent any

  environment {
    DOCKER = credentials('docker')
  }

  stages {
    stage('Docker Build') {
      steps {
        sh 'docker build -t dobrijsdock/jenkins-web:latest .'
      }
    }

    stage('Docker Push') {
      steps {        
          sh "docker login -u ${env.DOCKER_USR} -p ${env.DOCKER_PSW}"
          sh 'docker push dobrijsdock/jenkins-web:latest'
      }
    }
  }
}
